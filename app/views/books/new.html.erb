

  <h1>Books</h1>


  <div class="parent">
    <div class="child">title</div>
    <div class="child">body</div>
    <div class="child2">&nbsp;</div>
  </div>



  <% @books.each do |book| %>


    <div class="aaa">
    <span class="ZZZ"><%= book.title %></span>

    <span class="ZZZ"><%= book.body %></span>

    <span class="zzz">

    <%= link_to "Show", book_path(book.id)  %>
    <%= link_to "Edit", edit_book_path(book.id)  %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "iino?" %>

    </span>
    </div>
  <% end %>



  <h2>New book</h2>


  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>